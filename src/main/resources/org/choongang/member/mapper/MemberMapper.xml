<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.mapper.MemberMapper">
    <resultMap id="memberMap" type="member.Member">
        <result column="USER_ID" property="userId"/>
        <result column="USER_PW" property="userPw"/>
        <result column="POINT" property="point"/>
    </resultMap>

    <select id="getRanking" resultMap="memberMap">
        SELECT USER_ID, POINT, RANK() OVER(ORDER BY NVL(POINT, 0) DESC) AS RANK FROM MEMBER;
    </select>

    <!-- 회원 등록 -->
    <insert id="register">
        <selectKey keyProperty="userId" order="BEFORE" resultType="long">
            SELECT SEQ_MEMBER.NEXTVAL FROM DUAL
        </selectKey>

        INSERT INTO MEMBER (USER_ID, USER_PW, POINT)
        VALUES {#{userId}, #{userPw}, #{point})
    </insert>
</mapper>